@model IEnumerable<EDMS.Models.Document>

@{
    ViewBag.Title = "Список документов";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Создать документ", "Create")
</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th colspan="5">Действия</th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Посмотреть", "Details", new { id = item.ID })
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.ID })
            </td>
            <td>
                @Html.ActionLink("Отправить клиенту", "SendToClient", new { id = item.ID })
            </td>
            <td>
                @Html.ActionLink("Отправить модератору", "SendToModerator", new { id = item.ID })
            </td>
            <td>
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>
