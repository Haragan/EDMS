@model EDMS.Models.UserData

@{
    ViewBag.Title = "Смена роли пользователя";
}

<h2>@ViewBag.Title</h2>

<div>
    @Html.ActionLink("Вернуться к списку пользователей", "UserList")
</div>

<fieldset>
    <legend>@ViewBag.Title</legend>

    <table class="details-data">
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.FIO)
            </td>
            <td>
                @Html.DisplayFor(model => model.FIO)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Email)
            </td>
            <td>
                @Html.DisplayFor(model => model.Email)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(model => model.PhoneNumber)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.OrganizationID)
            </td>
            <td>
                @Html.DisplayFor(model => model.Organization.Name)
            </td>
        </tr>
    </table>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="hidden-fields">
            @Html.Hidden("user_id", Model.ID)
            <div>
                @Html.DropDownList("new_role", (SelectList)ViewBag.roles)
            </div>
        </div>
        <p>
            <input type="submit" value="Изменить" />
        </p>
    }
</fieldset>
