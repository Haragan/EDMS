@model EDMS.Models.Organization

@{
    ViewBag.Title = "Создание организации";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<div>
    @Html.ActionLink("Вернуться к списку организаций", "OrganizationList")
</div>

<fieldset>
    <legend>@ViewBag.Title</legend>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

    

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LegalAdress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LegalAdress)
            @Html.ValidationMessageFor(model => model.LegalAdress)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Postcode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Postcode)
            @Html.ValidationMessageFor(model => model.Postcode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PhoneNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PhoneNumber)
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </div>

        <p>
            <input type="submit" value="Создать" />
        </p>
    
    }
</fieldset>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
