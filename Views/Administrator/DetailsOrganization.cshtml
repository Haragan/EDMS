@model EDMS.Models.Organization

@{
    ViewBag.Title = "Информация об организации";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<div>
    @Html.ActionLink("Вернуться к списку организаций", "OrganizationList")
</div>
<div>
    @Html.ActionLink("Редактировать", "EditOrganization", new { id = Model.ID }) 
</div>

<fieldset>
    <legend>@ViewBag.Title</legend>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.LegalAdress)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LegalAdress)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Postcode)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Postcode)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.PhoneNumber)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PhoneNumber)
    </div>
</fieldset>
