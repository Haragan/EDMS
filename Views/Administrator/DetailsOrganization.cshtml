@model EDMS.Models.Organization

@{
    ViewBag.Title = "Информация об организации";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<div>
    @Html.ActionLink("Вернуться к списку организаций", "OrganizationList") |
    @Html.ActionLink("Редактировать", "EditOrganization", new { id = Model.ID })
</div>

<fieldset>
    <legend>@ViewBag.Title</legend>

    <table class="details-data">
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Name)
            </td>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.LegalAdress)
            </td>
            <td>
                @Html.DisplayFor(model => model.LegalAdress)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Postcode)
            </td>
            <td>
                @Html.DisplayFor(model => model.Postcode)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(model => model.PhoneNumber)
            </td>
        </tr>
    </table>
</fieldset>
